{
  "name": {
    "en": "LS110/120 W",
    "nl": "LS110/120 W"
  },
  "images": {
    "large": "./drivers/LS110Water/assets/images/large.jpg",
    "small": "./drivers/LS110Water/assets/images/small.jpg"
  },
  "class": "sensor",
  "capabilities": [
    "measure_water",
    "meter_water"
  ],
  "capabilitiesOptions": {
    "measure_water": {
      "type": "number",
      "title": {
        "en": "L/min",
        "nl": "L/min"
      },
      "units": {
        "en": "L/min"
      },
      "desc": {
        "en": "Water flow in Liters per minute (L/min)",
        "nl": "Waterdoorstroming in Liters per minuut (L/min)"
      },
      "chartType": "stepLine",
      "decimals": 1,
      "getable": true,
      "setable": false
    },
    "meter_water": {
      "decimals": 3
    }
  },
  "pair": [
    {
      "id": "pair"
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Connection",
        "nl": "Verbinding"
      },
      "children": [
        {
          "id": "youLessIp",
          "type": "text",
          "label": {
            "en": "URL or IP address",
            "nl": "URL of IP adres"
          },
          "value": "youless"
        },
        {
          "id": "port",
          "type": "number",
          "label": {
            "en": "Port",
            "nl": "Poort"
          },
          "hint": {
            "en": "Default is 80.",
            "nl": "Default is 80."
          },
          "value": 80
        },
        {
          "id": "password",
          "type": "password",
          "label": {
            "en": "Password",
            "nl": "Wachtwoord"
          },
          "hint": {
            "en": "Leave empty if no password is set in the LS120.",
            "nl": "Laat leeg als er geen wachtwoord is ingesteld in de LS120."
          },
          "value": ""
        },
        {
          "id": "pollingInterval",
          "type": "number",
          "label": {
            "en": "Polling interval (ms)",
            "nl": "Polling interval (ms)"
          },
          "attr": {
            "min": 100
          },
          "value": 350
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Ledring",
        "nl": "Ledring"
      },
      "children": [
        {
          "id": "ledring_usage_limit",
          "type": "number",
          "label": {
            "en": "Max consumption",
            "nl": "Max gebruik"
          },
          "hint": {
            "en": "LED ring is only available on Homey Pro 2016 and Homey Pro 2019.",
            "nl": "LED ring is alleen beschikbaar op Homey Pro 2016 en Homey Pro 2019."
          },
          "attr": {
            "min": 0
          },
          "value": 20
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Water meter settings",
        "nl": "Watermeter instellingen"
      },
      "children": [
        {
          "id": "meter_water_offset",
          "type": "number",
          "label": {
            "en": "Set watermeter (m続)",
            "nl": "Stand instellen (m続)"
          },
          "attr": {
            "min": 0,
            "step": 0.0001
          },
          "value": 0
        },
        {
          "id": "optical_sensor_pulse",
          "type": "number",
          "label": {
            "en": "Pulses per m続",
            "nl": "Pulsen per m続"
          },
          "attr": {
            "min": 0
          },
          "value": 1000
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Optical sensor settings",
        "nl": "Optische sensor instellingen"
      },
      "children": [
        {
          "id": "optical_sensor_raw_max",
          "type": "number",
          "label": {
            "en": "Peak value",
            "nl": "Maximale waarde"
          },
          "attr": {
            "min": 0,
            "max": 1000
          },
          "value": 700
        },
        {
          "id": "optical_sensor_raw_min",
          "type": "number",
          "label": {
            "en": "Minimum value",
            "nl": "Minimale waarde"
          },
          "attr": {
            "min": 0,
            "max": 1000
          },
          "value": 600
        },
        {
          "id": "auto_calibrate",
          "type": "checkbox",
          "value": true,
          "label": {
            "en": "Automatic calibration",
            "nl": "Automatisch calibreren"
          }
        },
        {
          "id": "log_raw",
          "type": "checkbox",
          "value": false,
          "label": {
            "en": "Log raw sensor data",
            "nl": "Ruwe sensordata loggen"
          }
        }
      ]
    }
  ]
}