  "flow":	{
    "triggers":[
      {
        "id":"power_changed_LS110",
        "title": {
          "en":"Power use changed",
          "nl":"Stroomverbruik gewijzigd"
        },
        "args": [
          {
            "name": "PowerChanged",
            "type": "device",
            "filter": "driver_id=LS110",
            "placeholder": {
              "en": "Which device",
              "nl": "Welk apparaat"
             }
          }
        ],
        "tokens":[
          {
            "name":"power",
            "type": "number",
            "title": {
              "en":"Watt",
              "nl":"Watt"
            },
            "example" : 850
          },
          {
            "name":"power_delta",
            "type": "number",
            "title": {
              "en":"+- W",
              "nl":"+- W"
            },
          "example" : 18
          }
        ]
      },
			{
				"id":"measure_water_changed",
				"title": {
					"en":"Water flow changed",
					"nl":"Waterdoorstroming gewijzigd"
				},
				"args": [
					{
						"name": "LS110Water",
						"type": "device",
						"filter": "driver_id=LS110Water",
						"placeholder": {
							"en": "Which YouLess device",
							"nl": "Welk YouLess apparaat"
						 }
					}
				],
				"tokens":[
